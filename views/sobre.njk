{% extends "layout.njk" %}

    {% block head %}
        <title>Sobre - {{about.name}}</title>
    {%endblock%}
    
{% block content %}
    <div id="wrapper">
        <img src="{{about.avatar}}" alt="{{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.title}}</h2>
        <p>{{about.description}}</p>
    </div><!--wrapper-->

    <div id="links-footer" class="links">
        {% for link in about.links %}
            <a href="{{link.url}}" target="_blank"><i class="{{link.icon}}"></i>{{link.name}}</a>
        {% endfor %}   
    </div><!--links-->

{% endblock %}